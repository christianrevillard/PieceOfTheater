<UserControl
    x:Class="PieceofTheater.Views.PlayText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <StackPanel Orientation="Horizontal" >
            <TextBox x:Name="Input" Height="457" TextWrapping="Wrap" Text="{Binding Input}" Width="604"/>
            <TextBox x:Name="Ouput" Height="457" TextWrapping="Wrap" Text="{Binding Output}" Width="799"/>
        </StackPanel>
        <Button Content="Button" Height="152" Width="340" Command="{Binding Process}"/>
    </StackPanel>
</UserControl>
